# ================================================
# DJANGO SETTINGS
# ================================================

# Chave secreta do Django. Gere uma nova para produção.
DJANGO_SECRET_KEY="django-insecure-sua-chave-secreta-aqui"

# Mude para "False" em produção.
DJANGO_DEBUG="True"

# Em produção, coloque seu domínio. Ex: "meusite.com,www.meusite.com"
DJANGO_ALLOWED_HOSTS="localhost,127.0.0.1,.vercel.app,.railway.app"

# ================================================
# SUWAYOMI API SETTINGS
# ================================================

# URL da sua API GraphQL (Primary)
SUWAYOMI_API_URL="http://localhost:4567/api/graphql"

# URL da API GraphQL (Backup/Fallback) - opcional
SUWAYOMI_API_URL_2=""

# URL Base do seu servidor Suwayomi (essencial para as imagens)
SUWAYOMI_BASE_URL="http://localhost:4567/"

# URL Base do servidor Backup - opcional
SUWAYOMI_BASE_URL_2=""

# ================================================
# SECURITY & PERFORMANCE
# ================================================

# Rate limiting (requests por minuto)
RATE_LIMIT_PER_MINUTE=60

# Timeout para requisições ao Suwayomi (segundos)
SUWAYOMI_TIMEOUT=30

# Timeout geral para requisições HTTP (segundos)
DEFAULT_HTTP_TIMEOUT=30

# Logging level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
DJANGO_LOG_LEVEL="INFO"

# Limite de memória para uploads (MB)
FILE_UPLOAD_MAX_MEMORY_SIZE=10

# Cache TTL (segundos)
CACHE_TTL=300

# ================================================
# DATABASE & CACHE (PRODUCTION)
# ================================================

# Redis URL (opcional - se não definido, usa cache local)
# REDIS_URL=redis://localhost:6379/1

# Database URL (será definido automaticamente em produção)
# DATABASE_URL=postgresql://user:pass@host:port/db

